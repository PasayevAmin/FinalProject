@using FinalBlogSite.Domain.Entities;
@model PostCreateVM
@{
    Layout = null;
}
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/manage/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/manage/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link rel="stylesheet" href="~/manage/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/manage/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/manage/images/favicon.png" />


</head>
<body>
    <div style=" width: 100%;
        height: 100vh; /* Ekranın tamamını kaplaması için */" class="main-panel">
        

    <div class="content-wrapper">
        <div class="row">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Post</h4>

                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <input asp-for="Title" class="form-control" placeholder="Title">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Content">Content</label>
                                <input asp-for="Content" class="form-control" placeholder="Content">
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                           @*  <div class="form-group">
                                <label asp-for="LikeCount">LikeCount</label>
                                <input asp-for="LikeCount" class="form-control" placeholder="LikeCount">
                                <span asp-validation-for="LikeCount" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CommentCount">CommentCount</label>
                                <input asp-for="CommentCount" class="form-control" placeholder="CommentCount">
                                <span asp-validation-for="CommentCount" class="text-danger"></span>
                            </div> *@
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input asp-for="Photo" class="form-control" placeholder="Photo">
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Category</label>
                                <select asp-for="CategoryId" asp-items="new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name))">
                                    <option selected disabled>Select one</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"> </span>
                            </div>
                            


                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
    <script src="~/manage/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <script src="~/manage/vendors/chart.js/Chart.min.js"></script>
    <script src="~/manage/vendors/dataclass=" col-lg-12 grid-margin stretch-card".net /jquery.dataTables.js"></script>
    <script src="~/manage/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="~/manage/js/off-canvas.js"></script>
    <script src="~/manage/js/hoverable-collapse.js"></script>
    <script src="~/manage/js/template.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/manage/js/dashboard.js"></script>
    <script src="~/manage/js/data-table.js"></script>
    <script src="~/manage/js/jquery.dataTables.js"></script>
    <script src="~/manage/js/dataTables.bootstrap4.js"></script>
    <!-- End custom js for this page-->


    <script src="~/manage/js/jquery.cookie.js" type="text/javascript"></script>
</body>