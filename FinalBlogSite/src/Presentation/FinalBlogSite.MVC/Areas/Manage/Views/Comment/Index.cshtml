@using FinalBlogSite.Application.ViewModels;
@using FinalBlogSite.Domain.Entities;
@model PaginationVM<Comment>
@{
    int count = 0;
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Comment Table</h4>
                        <a asp-controller="comment" asp-action="create" class="btn btn-success">Create</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Content
                                        </th>
                                        <th>
                                            LikeCount
                                        </th>

                                        <th>
                                            Settings

                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        count++;

                                        <tr>
                                            <td>
                                                @count
                                            </td>

                                            <td>
                                                @item.Content
                                            </td>
                                            <td>
                                                @item.LikeCount
                                            </td>

                                            <td>
                                                <a asp-controller="comment" asp-action="update" asp-route-Id="@item.Id" class="btn btn-warning btn-info"><i class="mdi mdi-border-color"></i></a>
                                                <a asp-controller="comment" asp-action="delete" asp-route-Id="@item.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete-sweep"></i></a>
                                            </td>
                                        </tr>

                                    }

                                </tbody>
                            </table>
                        </div>
                        <div style="display: flex; justify-content: center;">
                            <nav aria-label="...">
                                <ul class="pagination">
                                    <li class="page-item @(Model.CurrentPage<=1?"disabled":"") ">
                                        <a class="page-link" asp-route-page="@(Model.CurrentPage-1)" asp-action="index" asp-controller="category">Previous</a>
                                    </li>

                                    @for (int i = 0; i < Model.TotalPage; i++)
                                    {
                                        <li class="page-item @(Model.CurrentPage-1==i?"active":"")" aria-current="page">
                                            <a class="page-link" asp-route-page="@(i+1)" asp-action="index" asp-controller="category">@(i + 1)</a>
                                        </li>
                                    }

                                    <li class="page-item @(Model.TotalPage<=Model.CurrentPage?"disabled":"")">
                                        <a class="page-link" asp-route-page="@(Model.CurrentPage+1)" asp-action="index" asp-controller="category">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
