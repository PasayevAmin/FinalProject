@using FinalBlogSite.Application.ViewModels;
@model CommentIndexVM

<a asp-controller="Comment" asp-action="Create" asp-route-id="@Model.Comments.FirstOrDefault(x=>x.PostId==x.Post.Id).Post.Id" class="btn btn-success">Create</a>

@foreach (var item in Model.Comments)
{
    <div class="featured__content">
        <ul class="tgbanner__content-meta list-wrap">
            <li><span class="by">By</span>@item.AppUser.UserName <a href="blog.html"></a></li>
        </ul>
        <h4 class="title tgcommon__hover">
            <a href="blog-details.html">
                @item.Content
            </a>
        </h4>
    </div>
}
