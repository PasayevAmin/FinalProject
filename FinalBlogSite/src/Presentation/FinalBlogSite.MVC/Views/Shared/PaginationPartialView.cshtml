@using FinalBlogSite.Domain.Entities;
@model PaginationVM<Post>

<div class="pagination__wrap">
    <ul class="list-wrap">
        <li class="@(Model.CurrentPage<=1?"disabled":"")"><a asp-action="profile" asp-controller="home" asp-route-page="@Model.CurrentPage-1">Previous</a></li>
        @for (int i = 0; i < Model.TotalPage; i++)
        {
            <li class=" @(Model.CurrentPage-1==i?"active":"")"><a asp-route-page="@(i+1)" asp-action="profile" asp-controller="home">@(i + 1)</a></li>

        }
        <li class="@(Model.TotalPage<=Model.CurrentPage?"disabled":"")"><a asp-route-page="@(Model.CurrentPage+1)" asp-action="profile" asp-controller="home"><i class="fas fa-angle-double-right"></i></a></li>
    </ul>
</div>
