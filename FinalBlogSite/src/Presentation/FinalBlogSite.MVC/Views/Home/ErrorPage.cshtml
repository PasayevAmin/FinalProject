@model string
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hata Sayfası</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .error-container {
            text-align: center;
        }
        h1 {
            color: #333;
            font-size: 48px;
            margin-bottom: 10px;
        }
        p {
            color: #666;
            font-size: 18px;
            margin-top: 0;
        }
        a {
            color: #007bff;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>@Model!</h1>
        <p>Üzgünüz, istediğiniz sayfa bulunamadı.</p>
        <p><a asp-action="index" asp-controller="home">Ana Sayfaya Dön</a></p>
    </div>
</body>
</html>
